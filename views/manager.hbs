<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @import url('http://fonts.googleapis.com/css?family=Lato:400,700');
        @import url('https://fonts.googleapis.com/css?family=Acme');
        @import url('https://fonts.googleapis.com/css2?family=Laila:wght@300;500&display=swap');
    </style>
    <title>Manager Home Page</title>
</head>
<link rel="stylesheet" href="/css/basic.css">
<link rel="stylesheet" href="/css/manager.css">

<body>
    <script>
      function initialSetUp(data){
        var customer_name = document.querySelector('#customer-name');
        customer_name.innerText = "Hello Mr. " + data.name;
        var restaurant_name = document.querySelector('#restaurent-name');
        console.log(restaurant_name);
        restaurant_name.innerHTML = data.restaurant;
      }
      fetch(`http://localhost:3000/api/userdata`).then(function(res){
        res.json().then(function(data){
          console.log(data);
          document.cookie = `restaurant=${data.restaurant}`;
          localStorage.setItem ("restaurant", data.restaurant);
          initialSetUp(data);

        })
      })
      
     
    </script>
    <div id="header">
      <div id="logo"></div>
      <h1 id="website-name">Website</h1>
      <span id="customer-name">Hello Mr. Name</span>
      <img class="smiley" src="/images/smiley.png"  alt="mi" />
    </div>
    
    <div id="main">
        <div class="button-home grp1 home"><span class = "span-button-home"><a class="home-btn" href="/manager"><img src="/images/home_icon.png" alt="hi" style="height: 2.5vh; width: 1.5vw; margin-left: 0.4vw; margin-right: 4px;">Home</a></span></div>
        <div class="buttons grp1"><span class = "span-button-one"><a>About</a></span></div>
        <div class="buttons grp2"><span class = "span-button-one"><a>Profile</a></span></div>
        <div class="buttons grp2"><span class = "span-button-one"><a href="/logout">Logout</a></span></div>
        <hr id = "first-break">
        <div id="restaurent-name">Restaurent's Name</div>
        <div class="container">
            <form method="get" action="/food_items_manager" ><input class="links" type="submit" value="Food Items"></form>
            <form method="get" action="/orders" class="links"><input class="links" type="submit" value="Orders"></form>
            <form method="get" action="/staffDetails" class="links"><input class="links" type="submit" value="Staff"></form>
        </div>
        
    </div>
    <div id="footer">
        <p id = "first-para"><span id="span-one">Website Name</span></p>
        <p id = "second-para">About</p>
        <hr id = "second-break">
        <p id="third-para"><span>Copyright &copy; website name. All rights reserved</span></p>
    </div>
</body>
</html>